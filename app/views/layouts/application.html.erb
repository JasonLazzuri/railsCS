<!DOCTYPE html>
<html>
  <head>
    <title>ClashStop.com</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css" %>
    <%= stylesheet_link_tag "http://fonts.googleapis.com/icon?family=Material+Icons" %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <nav class="blue darken-3" id='top-bar'>
      <div class="nav-wrapper container">
        <a href="/"> <%= image_tag ('clash.png'), :class => 'home' %></a>
        <% if current_user %>
            <%= current_user.email  %>
            <%= link_to ('Logout'), destroy_user_session_path, :data => {:method=>'delete'}  %>
        <% else %>
            <%= link_to ("login"), new_user_session_path, :style => "align: right" %>
        <% end %>


        <% if (params['playerInput']).nil? && (params['clanInput']).nil? %>
          <div class="right">
            <!-- <button class="btn waves-effect halloween" name="button">Halloween Mode</button> -->
          </div>
        <% end %>
      </div>
    </nav>



    <%= yield %>
  </body>

  <!--Footer -->
  <footer class="page-footer blue" style="margin-top:25px;">
      <div class="footer-copyright blue">
        <div class="container">
        Made by
        <%= mail_to ('JasonBuildsWebsites@gmail.com'), 'Jason L', :style => 'color:white;' %>
        </div>
      </div>
  </footer>

</html>
